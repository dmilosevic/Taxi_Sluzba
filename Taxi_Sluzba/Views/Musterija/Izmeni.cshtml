@model Taxi_Sluzba.Models.Voznja

@{
    ViewBag.Title = "Izmeni";
}

<h2>Izmeni</h2>

@using (Html.BeginForm("UpdateVoznjaData", "Musterija", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Voznja</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.TipAutomobila, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ 
                    SelectList tipoviVozila = new SelectList(Enum.GetValues(typeof(Taxi_Sluzba.Enums.TipAutomobila)));
                }
                @Html.DropDownListFor(model => model.TipAutomobila, tipoviVozila,  new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipAutomobila, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LokacijaMusterije.Adresa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LokacijaMusterije.Adresa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LokacijaMusterije.Adresa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
